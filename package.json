{
  "name": "opencode",
  "displayName": "Opencode",
  "description": "VS Code extension for opencode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onCommand:opencode.settings"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opencode.settings",
        "title": "Open Opencode Settings"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+p",
        "command": "opencode.settings",
        "when": "editorTextFocus && !searchViewVisible"
      }
    ]
  }
}